<h1>Create post Here</h1>

<form action="/admin/posts/create" method="post" enctype="multipart/form-data">

    {{#each errors}}

        <div class="alert alert-danger">
        {{message}}</div>

    {{/each}}

    <div class="form-group">
        <label for="title">Title</label>
        <input name="title" type="text" class="form-control" id="title" placeholder="Enter Titile" >
    </div>

    <div class="form-group">
        <label for="file">File Upload</label>
        <input name="file" type="file" class="form-control" id="file " >
    </div>

    <div class="form-group">
        <label for="category" >Category</label>
        <select name="category" id="category" class="form-control">
            {{#each categories}}
            <option value="{{_id}}">{{name}}</option>
            {{/each}}
            
        </select>
    </div>

    <div class="form-group">
        <label for="status">Status</label>
        <select name="status" id="status" class="form-control">
            
            <option value="public">Public</option>
            <option value="private">Private</option>
            <option value="draft">Draft</option>

        </select>
    </div>

    <div class="form-check">
        <label for="allowComments" class="form-check-label">
        <input name="allowComments" type="checkbox" class="form-check-input" id="allowComments" >
        Allow Comments
        </label>
    </div>

    <div class="form-check">
        <label for="body">Body</label>
        <textarea name="body" cols="30" rows="10" class="form-control" id="body" placeholder="Enter description here..." ></textarea>        
    </div>



    <button type="submit" class="btn btn-primary">Create Post</button>




</form> 
