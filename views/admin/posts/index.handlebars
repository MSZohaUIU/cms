<h1>All Posts</h1>

<table class="table table-bordared">

    <thead >
        <tr>
            <th>Id</th>
            <th>File</th>
            <th>Title</th>
            <th>Status</th>
            <th>Category</th>
            <th>AllowComment</th>
            <th>View Post</th>
            <th>Date</th>
        </tr>
        <tbody>
            {{#each posts}}
            <tr>
                <td>{{_id}}</td>
                <td><img height="50" src="/uploads/{{file}}" alt="" > </td>
                <td>{{title}}</td>
                <td>{{status}}</td>
                <td>{{category.name}}</td>
                <td>{{allowComments}}</td>
                <td><a href="/post/{{_id}}">View</a></td>
                <td>{{ generateTime date 'MMM Do YYYY'}}</td>
                {{!-- <td><a href="/admin/posts/edit/{{_id}}" class="btn btn-info">Edit</a></td>
                <td>
                    <form action="/admin/posts/{{_id}}?_method=DELETE"  method="POST">
                        <button class="btn btn-danger" type="submit">Delete</button>
                    </form>
                </td> --}}
            </tr>
            {{/each}}
        </tbody>
    </thead>



</table>